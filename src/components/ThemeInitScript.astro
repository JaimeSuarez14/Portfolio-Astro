---
// Este componente inyecta un script que se ejecuta ANTES de que React cargue
// para evitar el parpadeo (flash) del tema incorrecto
---

<script is:inline>
  (function() {
    // Obtener el tema guardado en localStorage
    const savedTheme = localStorage.getItem("theme");
    const isDark = savedTheme === "dark";
    
    // Aplicar la clase 'dark' al html si corresponde
    const htmlElement = document.documentElement;
    if (isDark) {
      htmlElement.classList.add("dark");
      console.log("✓ Tema dark aplicado desde script inline");
    } else {
      htmlElement.classList.remove("dark");
      console.log("✓ Tema light aplicado desde script inline");
    }
  })();
</script>
